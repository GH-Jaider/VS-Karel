{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Karel Map",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keys" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.karelmap",
          "match": "//.*$"
        },
        {
          "name": "comment.block.karelmap",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.karelmap",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.karelmap",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.karelmap",
          "match": "-?\\b[0-9]+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.karelmap",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "match": "\"(dimensions|width|height|karel|x|y|facing|beepers|count|walls|from|to)\"\\s*:",
          "captures": {
            "1": { "name": "support.type.property-name.karelmap" }
          }
        },
        {
          "match": "\"([^\"]+)\"\\s*:",
          "captures": {
            "1": { "name": "variable.other.property.karelmap" }
          }
        }
      ]
    }
  },
  "scopeName": "source.karelmap"
}
